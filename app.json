{
  "expo": {
    "name": "WisdomWise",
    "slug": "wisdomwise",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "primaryColor": "#3b82f6",
    "description": "Your gentle companion for mindful wellness and mental health support",
    "keywords": ["wellness", "mindfulness", "mental health", "meditation", "therapy"],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#f0f9ff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "statusBar": {
        "style": "dark",
        "backgroundColor": "#f0f9ff"
      },
      "bundleIdentifier": "com.wisdomwise.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#f0f9ff"
      },
      "edgeToEdgeEnabled": true,
      "statusBar": {
        "backgroundColor": "#f0f9ff",
        "translucent": false
      },
      "package": "com.wisdomwise.app",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "WisdomWise - Mindful Wellness"
    },
    "plugins": [
      [
        "expo-font"
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#f0f9ff",
          "image": "./assets/splash-icon.png",
          "dark": {
            "backgroundColor": "#f0f9ff"
          }
        }
      ]
    ]
  }
}
