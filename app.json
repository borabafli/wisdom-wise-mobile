{
  "expo": {
    "name": "ZenMind",
    "slug": "wisdomwise",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "primaryColor": "#3b82f6",
    "description": "Your gentle companion for mindful wellness and mental health support",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wisdomwise.app",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Allow WisdomWise to use speech recognition for converting your voice to text during therapy sessions.",
        "NSMicrophoneUsageDescription": "Allow WisdomWise to access your microphone for voice input during therapy sessions.",
        "NSCameraUsageDescription": "Allow WisdomWise to use your camera for journaling photos and media entries.",
        "NSPhotoLibraryUsageDescription": "Allow WisdomWise to access your photo library to pick journaling images.",
        "NSUserTrackingUsageDescription": "This identifier will be used to personalize your experience and improve app features."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#EDF8F8"
      },
      "softwareKeyboardLayoutMode": "pan",
      "package": "com.wisdomwise.app",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.WAKE_LOCK",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "ZenMind - Mindful Wellness"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/OTF/ClashGrotesk-Bold.otf",
            "./assets/fonts/OTF/ClashGrotesk-Extralight.otf",
            "./assets/fonts/OTF/ClashGrotesk-Light.otf",
            "./assets/fonts/OTF/ClashGrotesk-Medium.otf",
            "./assets/fonts/OTF/ClashGrotesk-Regular.otf",
            "./assets/fonts/OTF/ClashGrotesk-Semibold.otf",
            "./assets/fonts/BubblegumSans-Regular.ttf",
            "./assets/fonts/Alan_Sans/static/AlanSans-SemiBold.ttf",
            "./assets/fonts/Alan_Sans/AlanSans-VariableFont_wght.ttf"
          ]
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#EDF8F8",
          "image": "./assets/splash-icon.png",
          "dark": {
            "backgroundColor": "#EDF8F8"
          }
        }
      ],
      "expo-secure-store",
      "expo-sqlite",
      "expo-image-picker",
      "expo-notifications",
      "expo-navigation-bar",
      "react-native-audio-api",
      "expo-web-browser",
      "expo-localization",
      [
        "expo-build-properties",
        {
          "android": {
            "useAndroidX": true,
            "enableProguardInReleaseBuilds": false,
            "enableJetifier": true,
            "extraDependencies": [
              "androidx.core:core:1.13.1"
            ],
            "packagingOptions": {
              "pickFirst": [
                "lib/armeabi-v7a/libc++_shared.so",
                "lib/arm64-v8a/libc++_shared.so",
                "lib/x86/libc++_shared.so",
                "lib/x86_64/libc++_shared.so"
              ]
            }
          }
        }
      ],
      "./plugins/withAndroidManifestFix",
      "./plugins/withForceExcludeSupport"
    ],
    "scheme": "zenmind",
    "extra": {
      "eas": {
        "projectId": "bee70e2e-8050-4ef6-ac3b-1d699f00bb47"
      }
    }
  }
}
